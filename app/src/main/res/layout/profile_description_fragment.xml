<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:padding="@dimen/defaultMargin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/picker_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_states"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/pr_descr_date_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/prof_tv_virtual_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_zodiak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_year_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_year_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_fate_symbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_communicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_psychology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_type_of_thinking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_vector_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_vector_servant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_element_structure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />

            <TextView
                android:id="@+id/prof_tv_socionics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/defaultMargin"
                android:layout_marginTop="@dimen/defaultMargin"
                android:background="@drawable/txt_states"
                android:textSize="@dimen/pr_descr_tv_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>