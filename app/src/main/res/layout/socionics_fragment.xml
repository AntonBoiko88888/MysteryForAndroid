<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/relD_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:rowCount="4"
                android:stretchMode="columnWidth">

            </GridLayout>

            <Button
                android:id="@+id/relD_btn_showInfo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/horoscope_online_text_marginTop"
                android:background="@drawable/btn_states_fat"
                android:text="@string/com_relationResult_text"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/relD_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/horoscope_online_text_marginTop"
                android:textSize="@dimen/textDescription" />

            <Button
                android:id="@+id/relD_btn_save_prof"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_states_thin_rect"
                android:text="  Сохранить в профиль  " />

        </LinearLayout>
    </ScrollView>
</LinearLayout>