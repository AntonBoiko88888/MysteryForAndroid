<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:padding="@dimen/defaultMargin"
    android:gravity="center_horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/for_cardView"
            android:gravity="center"
            android:padding="@dimen/defaultMargin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pro_zra_beginning_status"
            android:textSize="@dimen/stat_about_title_size"
            android:text="Начинающий"/>
        <TextView
            android:id="@+id/beginning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pro_zra_beginning_status"
            android:padding="@dimen/defaultMargin"
            android:textSize="@dimen/stat_about_text_size"
            android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/defaultMargin_double"
            android:gravity="center"
            android:background="@color/for_cardView"
            android:padding="@dimen/defaultMargin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stat_about_title_size"
                android:textColor="@color/pro_zra_advanced_status"
                android:text="Продвинутый"/>
            <TextView
                android:id="@+id/advanced_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pro_zra_advanced_status"
                android:padding="@dimen/defaultMargin"
                android:textSize="@dimen/stat_about_text_size"
                android:text=""/>

            <Button
                android:id="@+id/statAbout_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/defaultMargin_double"
                android:layout_marginBottom="@dimen/defaultMargin_triple"
                android:text="Приобрести"
                android:background="@drawable/btn_states_thin_rect"/>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>