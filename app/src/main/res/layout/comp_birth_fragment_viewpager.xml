<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">

    <LinearLayout
        android:id="@+id/comp_birth_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/comp_birth_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/com_birth_bull"/>
            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/comp_birth_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_multiline="false"
                app:ms_enableFloatingLabel="false"
                app:ms_enableErrorLabel="false"
                app:ms_floatingLabelText="floating label"
                app:ms_thickness="2dp"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_baseColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comp_birth_tv_romantic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Романтический брак"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/comp_birth_tv_patriarch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Патриархальный брак"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/comp_birth_tv_soul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Духовный брак"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/comp_birth_tv_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Равный брак"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/comp_birth_tv_vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Векторый брак"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/comp_birth_btn_result"
        android:layout_below="@+id/comp_birth_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Результат"/>
</RelativeLayout>