<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/back1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/acc_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/acc_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/account_fragment_name_textSize"
            android:textColor="@color/blue" />
            <Button
                android:id="@+id/acc_btn_rename"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/change_name_states"/>
        </LinearLayout>
        <TextView
            android:id="@+id/acc_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/account_fragment_textSize" />
        <TextView
            android:id="@+id/acc_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/account_fragment_textSize" />
        <TextView
            android:id="@+id/acc_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textSize="@dimen/account_fragment_textSize" />
        <Button
            android:id="@+id/btn_users_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/account_fragment_btn_height"
            android:text="@string/account_fragment_btn_users_upgrade_text"
            android:background="@drawable/btn_states_thin" />

    </LinearLayout>
        <ImageView
            android:id="@+id/acc_image_icon"
            android:layout_width="@dimen/acc_width_img"
            android:layout_height="@dimen/acc_height_img"
            android:layout_alignParentRight="true"
            android:src="@drawable/account_img"
            android:background="@drawable/border"
            android:scaleType="fitXY"
            />
        <Button
            android:id="@+id/acc_select_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/account_fragment_btn_height"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/acc_image_icon"
            android:width="@dimen/acc_width_img"
            android:layout_marginTop="@dimen/account_fragment_btn_selectImg_marginTop"
            android:textSize="@dimen/account_fragment_btn_selectImg_textSize"
            android:text="@string/account_fragment_btn_selectImg"
            android:background="@drawable/btn_states_thin"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/acc_btn_description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/account_fragment_btn_height"
        android:layout_centerInParent="true"
        android:text="@string/account_fragment_btn_my_description"
        android:background="@drawable/btn_states_thin"/>
    <Button
        android:id="@+id/acc_btn_new_profile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>