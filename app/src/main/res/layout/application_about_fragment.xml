<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:padding="@dimen/defaultMargin">



    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/defaultMargin_triple"
        android:src="@drawable/icon_eye_512" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/defaultMargin_triple"
        android:layout_marginTop="@dimen/defaultMargin_triple">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/application_about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/defaultMargin"
            android:layout_marginLeft="@dimen/defaultMargin_triple"
            android:layout_marginRight="@dimen/defaultMargin_triple"
            android:gravity="center"
            android:textSize="20sp" />

            <Button
                android:id="@+id/btn_application_evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin_half"
                android:layout_marginLeft="@dimen/defaultMargin_triple"
                android:layout_marginRight="@dimen/defaultMargin_triple"
                android:background="@drawable/btn_states_thin_rect"
                android:text="Оценить наше приложение" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>