<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    android:padding="@dimen/defaultMargin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/acc_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/acc_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/tv_info" />

                <Button
                    android:id="@+id/acc_btn_rename"
                    android:layout_width="@dimen/btn_size_small"
                    android:layout_height="@dimen/btn_size_small"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:background="@drawable/change_name_states" />
            </LinearLayout>

            <TextView
                android:id="@+id/acc_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin_half"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_info" />

            <TextView
                android:id="@+id/acc_tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin_half"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_info" />



                <TextView
                    android:id="@+id/acc_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultMargin_half"
                    android:textColor="@color/pro_zra_beginning_status"
                    android:textSize="@dimen/tv_info" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                android:id="@+id/btn_users_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_size_small"
                android:layout_marginTop="@dimen/defaultMargin_half"
                android:padding="@dimen/defaultMargin"
                android:background="@drawable/btn_states_thin_rect"
                android:text="@string/account_fragment_btn_users_upgrade_text" />
                <Button
                    android:id="@+id/acc_btn_question"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:layout_width="@dimen/btn_size_small"
                    android:layout_height="@dimen/btn_size_small"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:background="@drawable/question_states" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/acc_image_icon"
            android:layout_width="@dimen/image_icon"
            android:layout_height="@dimen/image_icon"
            android:layout_alignParentRight="true"
            android:background="@drawable/acc_icon_border"
            android:scaleType="fitXY"
            android:src="@drawable/account_img" />

        <Button
            android:id="@+id/acc_select_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_size_small"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/acc_image_icon"
            android:layout_marginTop="@dimen/defaultMargin"
            android:width="@dimen/image_icon"
            android:background="@drawable/btn_states_thin_rect"
            android:text="@string/account_fragment_btn_selectImg"
            android:textSize="@dimen/btn_select_img_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/acc_image_icon"
            android:layout_marginTop="@dimen/defaultMargin"
            android:clipToPadding="false"
            android:outlineProvider="bounds">

            <Button
                android:id="@+id/acc_btn_description"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_description_size"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_states_fat"
                android:paddingLeft="@dimen/defaultMargin_double"
                android:paddingRight="@dimen/defaultMargin_double"
                android:text="@string/account_fragment_btn_my_description"
                android:textColor="@color/blue"
                android:textSize="@dimen/btn_description_text_size" />

            <Button
                android:id="@+id/acc_btn_new_profile"
                android:layout_width="@dimen/btn_push_n_prof"
                android:layout_height="@dimen/btn_push_n_prof"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/defaultMargin_double"
                android:background="@drawable/acc_new_profile_states" />

            <Button
                android:id="@+id/acc_btn_pushSettings"
                android:layout_width="@dimen/btn_push_n_prof"
                android:layout_height="@dimen/btn_push_n_prof"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_margin="@dimen/defaultMargin_double"
                android:background="@drawable/acc_push_states" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>