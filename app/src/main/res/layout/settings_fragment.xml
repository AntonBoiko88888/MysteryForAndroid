<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:drawingCacheQuality="low"
    android:orientation="vertical"
    android:padding="@dimen/defaultMargin">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

    <TextView
        android:id="@+id/acc_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="@dimen/tv_select_datetime_size" />

    <Button
        android:id="@+id/amend_pick_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/defaultMargin"
        android:padding="@dimen/defaultMargin_double"
        android:textSize="@dimen/com_text_size2"
        android:textColor="@color/blue"
        android:layout_marginBottom="@dimen/defaultMargin_triple"
        android:textStyle="bold"
        android:background="@drawable/btn_states_thin_rect"
        android:text="@string/date_picker_amendDate_text" />

        <Button
            android:id="@+id/no_advertising"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/defaultMargin_double"
            android:textSize="@dimen/com_text_size2"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/defaultMargin_triple"
            android:layout_marginTop="@dimen/defaultMargin_triple"
            android:background="@drawable/btn_states_thin_rect"
            android:text="@string/application_no_advertising_text" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="@dimen/btn_com_image_icon"
        android:layout_height="@dimen/btn_com_image_icon"
        android:layout_below="@id/comp_rel_linear"
        android:layout_marginTop="@dimen/defaultMargin_double"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/share_states" />

</RelativeLayout>